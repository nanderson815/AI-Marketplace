{{> header/header }}



<main role="main" id="MainContent">

  <nav style="height: 0px; " class="filter-navbar ">
    <div class="categories-wrapper">
      <div class="categories-container">
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row marginTop20">
      <div class="col m12">
        <h6>Select Category:</h6>
        <!-- Dropdown Trigger -->
        <a class='dropdown-trigger btn marginTop20' href='#!' data-target='dropdown1'>All Categories<i
            class="fas fa-caret-down marginLeft10"></i></a>

        <!-- Dynamically Populate Dropdown -->
        <ul id='dropdown1' class='dropdown-content'>
          <li class="btn btn-small" data-category="Sports"><a href="#!">Sports</a></li>
          <li class="btn btn-small" data-category="Cars"><a href="#!">Cars</a></li>
          <li class="btn btn-small" data-category="Leisure"><a href="#!">Leisure</a></li>
          <li class="btn btn-small" data-category="Fashion"><a href="#!">Fashion</a></li>
          <li class="btn btn-small" data-category="Education"><a href="#!">Education</a></li>
          <li class="btn btn-small" data-category="Lifestyle"><a href="#!">Lifestyle</a></li>
          <li class="btn btn-small" data-category="Home Goods"><a href="#!">Home Goods</a></li>
        </ul>

        <!-- Popular Categories -->
        <div class="popularCategories borderBottomGray">
          <h6><i class="fas fa-map-marker-alt marginRight8" style="color:#737373"></i>Current Category</h6>
          <ul class="categoriesTwo">

            <li class="btn btn-small popular"><a href="#">{{ cat }}</a></li>

          </ul>
        </div>
      </div>

</div>
      <div class="gallery gallery-masonry row">
        {{#each category}}
        <div class="col s12 m4 gallery-item gallery-expand gallery-filter gallery-fillscreen" data-type=""
          data-section-type="product" data-tag="fillscreen">
          <div class="gallery-curve-wrapper">
            <a class="gallery-cover gray">
              <img src="{{this.image}}" alt="{{this.name}}" data-product-featured-image="" />
            </a>

          <div class="gallery-header">
            <span class="title">{{this.name}}</span>
            <div class="product-ratings-price">
              <span class="price" data-product-price="">
                {{this.price}}
              </span>
            </div>
          </div>
          {{> actions/viewProduct this}}
        </div>
        {{/each}}
      </div>
    </div>
</main>


{{> footer/footer }}