<div class="gallery-body">
    <div class="title-wrapper">
        <h3>{{this.name}}</h3>
    </div>
    <div class="checkout-column">
        <img class="materialboxed" width="300"
            src={{this.image}}>
        <br>

        <button class="btn-large z-depth-0 add-btn-product edit-product" type="submit" name="edit" data-id="{{this.id}}">
            <span>Edit Product</span>
        </button>

         <button class="btn-large z-depth-0 add-btn-product delete-product red darken-1" type="submit" name="delete" data-id="{{this.id}}">
            <span>Delete Product</span>
        </button>

    </div>

    <div class="description">
        <div class="row">
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title"><b>Product Description</b></span>
                            <p>{{this.description}}</p>
                        </div>
                        <div class="card-action">
                            <ul>
                                <li>Phone number: {{this.phone}}</li>
                                <li>Email: {{this.email}}</li>
                            </ul>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-content">
                            <span class="card-title"><b>${{this.price}}</b></span>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
</div>